doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

    meta(name="description" content="")
    meta(name="keywords"    content="")
    meta(name="author"      content="nekonenene")
    link(rel="shortcut icon" href="./img/favicon.ico")

    //- for Android SmartPhone
    meta(name="theme-color" content="#2b0de8")
    link(rel="icon" href="./img/favicon_192.png" sizes="192x192")

    - var title = "練習ページ";
    title #{title}

    //- My Stylesheets
    link(rel="stylesheet" href="./style/top.css")
  body.bg-light
    main#app(role="main")
      section.jumbotron.text-center
        .container
          h1.jumbotron-heading #{title}
          p.lead.text-muted
            | ようこそ！
      .container
        .row
          .col-md-6
            textarea(rows="25" style="width:100%;" v-model="inputText")
          .col-md-6
            textarea(rows="25" style="width:100%;" v-model="outputText")

    footer.container.text-right
      a(href="http://hato-neko.x0.com" target="_blank" title="ハトネコエセンター").
        ハトネコエ
      | &nbsp;
      a(href="https://twitter.com/nekonenene" target="_blank" title="Twitter: nekonenene").
        (@nekonenene)

    //- JavaScript
    //- jQuery first, then Popper.js, then Bootstrap JS
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E=" crossorigin="anonymous")
    script(src="https://unpkg.com/popper.js@1.14.7/dist/umd/popper.min.js" crossorigin="anonymous")
    script(src="https://unpkg.com/bootstrap-material-design@4.1.1/dist/js/bootstrap-material-design.js" integrity="sha384-CauSuKpEqAFajSpkdjv3z9t8E7RlpJ1UP0lKM/+NdtSarroVKu069AlsRPKkFBz9" crossorigin="anonymous")
    <script>$(document).ready(function() { $('body').bootstrapMaterialDesign(); });</script>
    //- My Scripts
    script(src="./js/top.js")
